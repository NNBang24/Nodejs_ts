{
  "name": "nodejs-pro-bang",
  "version": "1.0.0",
  "description": "nodejs pro",
  "main": "dist/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon",
    "dev": "nodemon",
    "start:debug": "nodemon --watch src -e ts --exec \"node --inspect=9229 -r ts-node/register -r tsconfig-paths/register ./src/app.ts\""
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "node_modules"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src/app.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NNBang24/Nodejs_ts.git"
  },
  "keywords": [
    "nodejs",
    "express",
    "mysql"
  ],
  "author": {
    "name": "bang"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NNBang24/Nodejs_ts/issues"
  },
  "homepage": "https://github.com/NNBang24/Nodejs_ts#readme",
  "dependencies": {
    "dotenv": "16.4.7",
    "ejs": "3.1.10",
    "express": "5.0.1",
    "mysql2": "3.12.0"
  },
  "devDependencies": {
    "@types/ejs": "3.1.5",
    "@types/express": "5.0.0",
    "@types/node": "22.10.7",
    "nodemon": "^3.1.9",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.7.3"
  }
}

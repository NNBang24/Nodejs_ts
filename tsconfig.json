{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist" ,
    "baseUrl": "." ,
    "paths": {
      "config/*": [
        "./src/config/*"
      ],
      "controllers/*": [
        "./src/controllers/*"
      ],
      "models/*": [
        "./src/models/*"
      ],
      "routers/*": [
        "./src/routers/*"
      ],
      "services/*": [
        "./src/services/*"
      ],
      "views/*": [
        "./src/views/*"
      ]
    }
  }
}